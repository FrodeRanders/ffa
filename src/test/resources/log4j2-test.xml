<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">

    <Properties>
        <Property name="log-path">.</Property>
    </Properties>

    <!-- Appenders (writing to file in various ways) -->
    <Appenders>
        <RollingFile name="INTERNAL"
                     fileName="${log-path}/ffa.log"
                     filePattern="${log-path}/ffa-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout> <!-- %c{1} -->
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%t] %c %m%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="50"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="se.fk" level="TRACE" />
        <Logger name="com.fasterxml.jackson.databind" level="TRACE"/>
        <Logger name="com.fasterxml.jackson.core" level="TRACE"/>

        <Root level="INFO">
            <appender-ref ref="INTERNAL"/>
        </Root>
    </Loggers>
</Configuration>
